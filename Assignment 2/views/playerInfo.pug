doctype html
html
  head
    title Player Information
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css")
    style.
      .player-info {
        display: flex;
      }
      .player-image {
        max-width: 200px;
        max-height: 200px;
      }
      table.stats-table {
        width: 100%;
      }
  body
    .container
      h1 Player Information
      .player-info
        .col-md-6
          img.player-image(src=response.data.playerImg, alt=response.data.name, class="img-fluid")
        .col-md-6
          h2= response.data.name
          p Date of Birth: #{new Date(response.data.dateOfBirth).toDateString()}
          p Role: #{response.data.role}
          p Batting Style: #{response.data.battingStyle}
          p Bowling Style: #{response.data.bowlingStyle}
          p Place of Birth: #{response.data.placeOfBirth}
          p Country: #{response.data.country}

<!DOCTYPE html>
<html>
  <head>
    <title>Welcome to My Weather App</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
    />
  </head>
  <body class="bg-light d-flex align-items-center min-vh-100">
    <div class="container">
      <div class="text-center">
        <h3 class="h3">Node Weather Forecast</h3>
      </div>

      <div class="row justify-content-center mt-4">
        <div class="col-md-6">
          <form id="searchWeatherForm" action="/weather">
            <div class="mb-3">
              <input
                type="text"
                id="cityInput"
                name="city"
                class="form-control"
                placeholder="Enter city name"
                required
              />
            </div>
            <div class="mb-3">
              <input
                type="email"
                id="mailInput"
                name="mail"
                class="form-control"
                placeholder="Enter your email"
                required
              />
            </div>
            <div class="mb-3">
              <input
                type="tel"
                id="phone"
                name="phone"
                class="form-control"
                placeholder="Enter your phone"
                required
              />
            </div>
            <center>
            <div class="mb-3">
              <button
                type="submit"
                id="searchButton"
                class="btn btn-primary btn-block"
              >
                SUBSCRIBE WEATHER UPDATE
              </button>
            </div>
          </center>
          </form>
        </div>
      </div>

      <% if (weather) { %>
      <div class="row justify-content-center mt-4">
        <div class="col-md-6">
          <div class="card">
            <div class="card-header">
              <h1 class="h4 text-center">Weather for <%= cityName %></h1>
            </div>
            <div class="card-body">
              <div class="row">
                <div class="col-md-8">
                  <p class="mb-1">
                    Temperature: <%= temperature %> 째C
                  </p>
                  <p class="mb-1">
                    Max temperature: <%= max_temperature %> 째C
                  </p>
                  <p class="mb-1">
                    Min temperature: <%= min_temperature %> 째C
                  </p>
                  <p class="mb-1">
                    Feels like: <%= feels_like %> 째C
                  </p>
                  <p class="mb-0">Humidity: <%= humidity %>%</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <center>
        <div class="mb-3">
          <button disabled
            type="submit"
            id="searchButton"
            class="btn btn-primary btn-block btn-success"
            style="margin-top: 10px"
          >
            <%= subscribe %>
          </button>
        </div>
      </center>
      <% } %>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
    ></script>

    <script>
      document
        .getElementById("searchButton")
        .addEventListener("click", function (e) {
          const cityInput = document.getElementById("cityInput");
          const city = cityInput.value;
          const mailInput = document.getElementById("mailInput");
          const mail = mailInput.value;
          const phoneInput = document.getElementById("phone");
          const phone = phoneInput.value;

          const form = document.getElementById("searchWeatherForm");
          form.action =
            "/weather?city=" +
            encodeURIComponent(city) +
            "&mail=" +
            encodeURIComponent(mail) +
            "&phone=" +
            encodeURIComponent(phone);

          form.method = "GET";
          form.submit();
        });
    </script>
  </body>
</html>

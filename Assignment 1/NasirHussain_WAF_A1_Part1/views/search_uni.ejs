<!DOCTYPE html>
<html lang="en">
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">    <style>
        .btn-sm {
            margin-left: 10px;
            height: 40px;
            width: 73px;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <div class="d-flex justify-content-between">
            <h1>University Result</h1>
            <a href="/home" class="btn btn-success btn-sm">Home</a>
        </div>
    </div>
    <div>
        <% if (universities.length !== 0) { %>
        <ol>
            <% for (const university of universities) { %>
            <li>
                <strong><%= university.name %></strong>
                <ul>
                    <li><a href="<%= university.web_pages[0] %>"><%= university.web_pages[0] %></a></li>
                    <li><%= university.country %></li>
                </ul>
            </li>
            <% } %>
        </ol>
        <% } else { %>
        <div class="alert alert-info mt-3">
            No universities found.
        </div>
        <% } %>
    </div>
</body>
</html>
